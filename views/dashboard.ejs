<link rel="stylesheet" href="/css/dashboard.css">

<header class="navbar">
    <h2>
        <i class="fa-solid fa-recycle"></i>
        <span>HABBIT</span> TRACKER
    </h2>
    <div class="user">

        <span class="user-name">
            <%= user.name %>
        </span>
        <a href="/user/sign-out" class="logout-btn">Logout</a>
    </div>
</header>

<div class="habbit-container">
    <div class="views">
        <a href="/user/update-view?view=daily" class="daily">Daily</a>
        <a href="/user/update-view?view=weekly" class="weekly">Weekly</a>
    </div>
    <form action="" method="post">
        <input type="text" placeholder="Enter Your New Habbit" name="habbit" required>
        <button class="add-btn">
            <i class="fa-solid fa-plus"></i>
        </button>
    </form>
    <div class="options">
        <span>
            <i class="fa-solid fa-circle-check done"></i>
            Done
        </span>
        <span>
            <i class="fa-solid fa-circle-minus not-done"></i>
            Not Done
        </span>
        <span>
            <i class="fa-solid fa-circle-xmark none"></i>
            None
        </span>
    </div>
    <div class="list-habbits">
        <ul>
            <% if(user.views==="daily" ) { %>
                <li class="daily-view">
                    <a href="/user/dashboard">
                        <i class="fa-solid fa-circle-minus not-done"></i>
                    </a>
                    <h1>Going Gym</h1>
                    <a href="/user/dashboard/:id">
                        <i class="fa-solid fa-trash delete"></i>
                    </a>
                </li>
                <li class="daily-view">
                    <a href="/user/dashboard">
                        <i class="fa-solid fa-circle-minus done"></i>
                    </a>
                    <h1>Study 5hrs</h1>
                    <a href="/user/dashboard/:id">
                        <i class="fa-solid fa-trash delete"></i>
                    </a>
                </li>
                <% } else { %>
                    <li class="weekly-view">
                        <div class="title">
                            <span class="habbit-name">Going Gym</span>
                            <a href="/user/dashboard/:id">
                                <i class="fa-solid fa-trash delete"></i>
                            </a>
                        </div>
                        <div class="weekly-calender">
                            <div class="day">
                                <div class="day-date">
                                    <h4>Wed, 25</h4>
                                </div>
                                <div class="status">
                                    <a href="/user/dashboard">
                                        <i class="fa-solid fa-circle-minus done"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="day">
                                <div class="day-date">
                                    <h4>Wed, 25</h4>
                                </div>
                                <div class="status">
                                    <a href="/user/dashboard">
                                        <i class="fa-solid fa-circle-minus done"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="day">
                                <div class="day-date">
                                    <h4>Wed, 25</h4>
                                </div>
                                <div class="status">
                                    <a href="/user/dashboard">
                                        <i class="fa-solid fa-circle-minus done"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </li>
                    <% } %>
        </ul>
    </div>
</div>